<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="atmconsultoria.studio.com.atmconsultoria.MainActivity"
    android:background="#ffffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/logo"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botaoEmpresaID"
        android:background="@drawable/menu_empresa"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botaoServicoID"
        android:background="@drawable/menu_servico"
        android:layout_alignTop="@+id/botaoEmpresaID"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botaoClientesID"
        android:layout_below="@+id/botaoEmpresaID"
        android:layout_alignLeft="@+id/botaoEmpresaID"
        android:layout_alignStart="@+id/botaoEmpresaID"
        android:layout_marginTop="45dp"
        android:background="@drawable/menu_cliente" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botaoContatoID"
        android:layout_alignTop="@+id/botaoClientesID"
        android:layout_alignLeft="@+id/botaoServicoID"
        android:layout_alignStart="@+id/botaoServicoID"
        android:background="@drawable/menu_contato" />
</RelativeLayout>
